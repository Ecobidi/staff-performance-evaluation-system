<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title text-white">Evaluations</h3>
    </div> 
  </div>

  <div class="row">
    <div class="col-12">
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Evaluations</h4>
      <table class="table table-bordered table-striped text-white">
        <thead class="font-weight-bold">
          <tr>
            <td>Employee</td>
            <td>Task Title</td>
            <td>Task Status</td>
            <td>Evaluation Date</td>
            <td>Evaluator</td>
            <td>Individual Rating</td>
            <td>Total Score (%)</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% evaluations.forEach((m) => { %>
            <tr>
              <td><%= m.employee.surname + ", " + m.employee.other_names %></td>
              <td><%= m.task.title %></td>
              <td><%= m.task.status %></td>
              <td><%= m.created_at.toLocaleDateString() %></td>
              <td><%= m.evaluator.surname + ", " + m.evaluator.other_names %></td>
              <td>
                <small>Efficiency: <%= m.evaluation.efficiency  + "/5" %></small> <br>
                <small>Quality: <%= m.evaluation.quality  + "/5" %></small> <br>
                <small>Timeliness: <%= m.evaluation.timeliness  + "/5" %></small> <br>
                <small>Teamwork: <%= m.evaluation.teamwork  + "/5" %></small> <br>
                <small>Accuracy: <%= m.evaluation.accuracy  + "/5" %></small> <br>
              </td>
              <td><%= ( ( ( (m.evaluation.efficiency /5) + (m.evaluation.quality /5) + (m.evaluation.timeliness /5) + (m.evaluation.accuracy /5) + (m.evaluation.teamwork /5) ) / 5) * 100 ).toFixed(1) %> %</td>
              <td>
                <a href='<%= "/tasks/remove/" + m._id %>' class="btn btn-sm btn-danger mx-1 my-1">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>

</div>
  

<%- include ('partials/bottom') %>