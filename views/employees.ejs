<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title text-white">Employees</h3>
      <div>
        <a href="/employees/new" class="btn btn-success">Add New Employee</a>
      </div>
    </div> 
  </div>

  <div class="row">
    <div class="col-12">
      <form id="search-form" method="GET" action="/employees?" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="Search by name...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Employees</h4>
      <table class="table table-bordered table-striped text-white">
        <thead class="font-weight-bold">
          <tr>
            <td>Photo</td>
            <td>Surname</td>
            <td>Other Names</td>
            <td>Gender</td>
            <td>Department</td>
            <td>Designation</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% employees.forEach((m) => { %>
            <tr>
              <td style="width: 100px">
                <img class="table-thumbnail" src='<%= "/images/" + m.photo  %>'>
              </td>
              <td><%= m.surname %></td>
              <td><%= m.other_names %></td>
              <td><%= m.gender %></td>
              <td><%= m.department %></td>
              <td><%= m.designation %></td>
              <td>
                <a href='<%= "/tasks/new?employee_id=" + m._id %>' class="btn btn-sm btn-primary mx-1 my-1">Assign Task</a>
                <a href='<%= "/employees/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>

</div>
  

<%- include ('partials/bottom') %>